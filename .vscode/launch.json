{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug TrajectoryFollower Node",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/install/trajectory_follower_nobuakif/lib/trajectory_follower_nobuakif/trajectory_follower_nobuakif",
      "args": [
        "--ros-args",
        "-r", "__node:=trajectory_follower_nobuakif_node",
        "-p", "use_external_target_vel:=false",
        "-p", "external_target_vel:=10.0",
        "-p", "lookahead_gain:=0.5",
        "-p", "lookahead_min_distance:=3.5",
        "-p", "speed_proportional_gain:=1.0",
        "-p", "steering_tire_angle_gain:=1.0",
        "--remap", "input/kinematics:=/localization/kinematic_state",
        "--remap", "input/trajectory:=/planning/scenario_planning/trajectory",
        "--remap", "output/control_cmd:=/control/command/control_cmd"
      ],
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "Build trajectory_follower_nobuakif"
    }
  ]
}
